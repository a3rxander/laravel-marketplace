# ==============================================
# MARKETPLACE DOCKER ENVIRONMENT TEMPLATE
# Este archivo es la plantilla base para Docker
# ==============================================

APP_NAME="Marketplace Platform"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ==============================================
# DATABASE CONFIGURATION (Docker Services)
# ==============================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=marketplace
DB_USERNAME=marketplace
DB_PASSWORD=secret

# ==============================================
# CACHE & SESSIONS (Docker Services)
# ==============================================
BROADCAST_DRIVER=pusher
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Memcached Configuration
MEMCACHED_HOST=memcached
MEMCACHED_PORT=11211

# ==============================================
# EMAIL CONFIGURATION (Development)
# ==============================================
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@marketplace.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==============================================
# SEARCH ENGINE (Elasticsearch Docker Service)
# ==============================================
SCOUT_DRIVER=explorer
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=http
ELASTICSEARCH_USER=
ELASTICSEARCH_PASS=

# Explorer Configuration
EXPLORER_CONNECTION=default
EXPLORER_HOST=elasticsearch:9200

# ==============================================
# AUTHENTICATION & AUTHORIZATION
# ==============================================
# Laravel Passport (OAuth2)
PASSPORT_PERSONAL_ACCESS_CLIENT_ID=
PASSPORT_PERSONAL_ACCESS_CLIENT_SECRET=

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
# Laravel Horizon (Queue Dashboard)
HORIZON_DOMAIN=localhost:8000
HORIZON_PATH=admin/horizon

# Debug Tools
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true

# ==============================================
# MARKETPLACE BUSINESS LOGIC
# ==============================================
MARKETPLACE_COMMISSION_RATE=10.00
MARKETPLACE_CURRENCY=USD
MARKETPLACE_TIMEZONE=UTC
MARKETPLACE_ALLOW_GUEST_CHECKOUT=true
MARKETPLACE_AUTO_APPROVE_VENDORS=false
MARKETPLACE_MIN_WITHDRAWAL_AMOUNT=50.00

# ==============================================
# FILE UPLOAD SETTINGS
# ==============================================
MAX_UPLOAD_SIZE=10240
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENT_EXTENSIONS=pdf,doc,docx
MAX_IMAGES_PER_PRODUCT=10

# ==============================================
# PAYMENT GATEWAYS (Test/Sandbox Keys)
# ==============================================
STRIPE_KEY=pk_test_example
STRIPE_SECRET=sk_test_example
STRIPE_WEBHOOK_SECRET=whsec_example

PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=sandbox_client_id
PAYPAL_CLIENT_SECRET=sandbox_client_secret

# ==============================================
# REAL-TIME NOTIFICATIONS (Development)
# ==============================================
PUSHER_APP_ID=dev_app_id
PUSHER_APP_KEY=dev_app_key
PUSHER_APP_SECRET=dev_app_secret
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ==============================================
# RATE LIMITING
# ==============================================
THROTTLE_LOGIN_ATTEMPTS=5
THROTTLE_API_REQUESTS=60
THROTTLE_SEARCH_REQUESTS=120

# ==============================================
# AWS S3 (Leave empty for local development)
# ==============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false