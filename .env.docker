# Docker Environment Variables
COMPOSE_PROJECT_NAME=marketplace

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=marketplace
DB_USERNAME=marketplace
DB_PASSWORD=secret

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Memcached (alternative cache)
MEMCACHED_HOST=memcached
MEMCACHED_PORT=11211

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch:9200
SCOUT_DRIVER=elastic
SCOUT_PREFIX=marketplace_

# Mail (for development)
MAIL_MAILER=log
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# Horizon
HORIZON_PREFIX=horizon:marketplace:

# Application
APP_NAME="Marketplace"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Passport
PASSPORT_PERSONAL_ACCESS_CLIENT_ID=
PASSPORT_PERSONAL_ACCESS_CLIENT_SECRET=